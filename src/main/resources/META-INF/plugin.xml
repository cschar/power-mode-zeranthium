<idea-plugin>
    <id>com.cschar.powermode3-zeranthium</id>
    <name>Powermode 3 - Zeranthium</name>
<!--    <vendor email="support@yourcompany.com">YourCompany</vendor>-->

    <description>  Power Mode 3 - Zeranthium

        a fun extension to add graphics to typing events.

    </description>



    <!--    see config options here-->
    <!--    https://www.jetbrains.org/intellij/sdk/docs/basics/plugin_structure/plugin_configuration_file.html-->
    <application-components>
        <component>
            <implementation-class>com.cschar.pmode3.PowerMode3</implementation-class>
        </component>
    </application-components>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable groupId="appearance"
                                 groupWeight="20"
                                 id="power.mode3"
                                 displayName="Power mode 3 - Zeranthium"
                                 instance="com.cschar.pmode3.PowerMode3Configurable" />
    </extensions>

    <actions>

    </actions>
</idea-plugin>
